<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        tools:ignore="UselessParent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cv_profile_user"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginTop="4dp"
            android:src="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:gravity="center|start"
            android:layout_toEndOf="@+id/cv_profile_user">

            <TextView
                android:id="@+id/tv_name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/cairo_semibold"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:maxLines="1"
                android:text="Rodrigo Carlos"
                android:textColor="@color/colorDark080"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="-8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv_profile_user_thumb"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:src="@null"/>

                <TextView
                    android:id="@+id/tv_content_card_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/cairo"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="-10sp"
                    android:maxLines="1"
                    android:text="@string/text_description_large"
                    android:textColor="@color/colorDark070"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="14dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:cardElevation="0dp"
            android:elevation="0dp"
            app:cardCornerRadius="0dp"
            android:backgroundTint="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/shape_label_new_message">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/cairo_semibold"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>